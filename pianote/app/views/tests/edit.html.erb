<%= render :partial => '/shared/menu' %>

<h1>Edit note</h1>
 
<%= form_for :test, url: test_path(@test), method: :patch do |t| %>
 
  <% if @test.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@test.errors.count, "error") %> prohibited
        this note from being saved:
      </h2>
      <ul>
        <% @test.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= t.label :name %><br>
    <%= t.text_field :name %>
  </p>
 
  <p>
    <%= t.label :path %><br>
